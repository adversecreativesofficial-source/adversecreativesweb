---

<section
    class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20"
>
    <!-- Background Effects -->
    <div
        class="absolute inset-0 bg-gradient-to-b from-[#00040f] via-[#0b1026] to-[#00040f] z-0"
    >
    </div>
    <div
        class="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] bg-blue-600/20 rounded-full blur-[120px] z-0"
    >
    </div>
    <div
        class="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-indigo-600/20 rounded-full blur-[120px] z-0"
    >
    </div>

    <!-- Content -->
    <div class="relative z-10 text-center px-4 max-w-5xl mx-auto">
        <!-- Star Icon Top -->
        <div class="flex justify-center mb-8">
            <div
                class="w-12 h-12 bg-blue-600/30 rounded-full flex items-center justify-center backdrop-blur-sm border border-blue-500/30"
            >
                <svg
                    class="w-6 h-6 text-blue-400"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
                    ></path>
                </svg>
            </div>
        </div>

        <h1
            class="text-5xl md:text-7xl lg:text-8xl font-bold font-outfit mb-6 leading-tight"
        >
            <span class="block">While They Wait.</span>
            <span
                class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-400"
                >Your Brand Wins.</span
            >
        </h1>

        <p class="text-gray-400 text-lg md:text-xl max-w-2xl mx-auto mb-10">
            Higher advertising revenue proven in high-traffic spaces where
            customers are present, waiting, and attentive.
        </p>

        <div
            class="flex flex-col sm:flex-row items-center justify-center gap-4"
        >
            <button
                class="px-8 py-3 bg-blue-600 text-white rounded-full font-semibold hover:bg-blue-700 transition-colors shadow-lg shadow-blue-600/30 w-full sm:w-auto"
            >
                Book a demo
            </button>
            <button
                class="px-8 py-3 bg-white text-black rounded-full font-semibold hover:bg-gray-200 transition-colors w-full sm:w-auto"
            >
                See solutions
            </button>
        </div>

        <!-- Floating Icons -->
        <div
            class="absolute top-1/2 left-0 md:left-20 transform -translate-y-1/2 hidden lg:block float-icon opacity-0"
        >
            <div
                class="w-16 h-16 bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl flex items-center justify-center border border-gray-700 shadow-2xl"
            >
                <svg
                    class="w-8 h-8 text-blue-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                </svg>
            </div>
        </div>

        <div
            class="absolute top-1/2 right-0 md:right-20 transform -translate-y-1/2 hidden lg:block float-icon opacity-0"
        >
            <div
                class="w-16 h-16 bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl flex items-center justify-center border border-gray-700 shadow-2xl"
            >
                <svg
                    class="w-8 h-8 text-indigo-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </div>
        </div>
    </div>

    <div
        class="absolute bottom-0 left-0 w-full h-24 bg-gradient-to-t from-[#00040f] to-transparent z-10 w-full"
    >
    </div>
</section>

<script>
    import { gsap } from "gsap";

    // Hero Animations
    const tl = gsap.timeline();

    tl.from("h1 > span", {
        y: 50,
        opacity: 0,
        duration: 1,
        stagger: 0.2,
        ease: "power3.out",
    })
        .from(
            "p",
            {
                y: 20,
                opacity: 0,
                duration: 0.8,
                ease: "power2.out",
            },
            "-=0.5",
        )
        .from(
            "button",
            {
                y: 20,
                opacity: 0,
                duration: 0.5,
                stagger: 0.1,
                ease: "power2.out",
            },
            "-=0.5",
        )
        .to(
            ".float-icon",
            {
                opacity: 1,
                y: 0,
                duration: 1,
                stagger: 0.3,
                ease: "power2.out",
            },
            "-=0.5",
        );

    // Continuous floating effect for icons (minimalistic)
    gsap.to(".float-icon", {
        y: "-10px",
        duration: 2,
        repeat: -1,
        yoyo: true,
        ease: "sine.inOut",
        stagger: 1,
    });
</script>
