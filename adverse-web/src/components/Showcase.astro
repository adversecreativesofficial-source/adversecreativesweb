<section class="py-20 px-6 md:px-12 max-w-7xl mx-auto">
    <div class="text-center mb-16">
        <span
            class="text-blue-500 font-semibold uppercase tracking-wider text-sm"
            >OUR SCREENS</span
        >
        <h2 class="text-3xl md:text-5xl font-bold mt-2 font-outfit">
            Our Screens. <span class="text-blue-500">Your Visibility.</span>
        </h2>
        <p class="text-gray-400 mt-4 max-w-2xl mx-auto">
            High-quality digital displays placed strategically for maximum
            impact.
        </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Large Image/Video Area -->
        <div
            class="showcase-item lg:col-span-2 relative rounded-3xl overflow-hidden group h-[500px] opacity-0 translate-y-8"
        >
            <!-- Placeholder image using a gradient and some text to simulate the screen content -->
            <div
                class="absolute inset-0 bg-gray-900 flex items-center justify-center"
            >
                <img
                    src="https://images.unsplash.com/photo-1510279895818-f24f5a896489?q=80&w=2670&auto=format&fit=crop"
                    alt="City Street Screen"
                    class="w-full h-full object-cover opacity-80 group-hover:scale-105 transition-transform duration-700"
                />
                <!-- Play button overlay -->
                <div class="absolute inset-0 flex items-center justify-center">
                    <div
                        class="w-16 h-16 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center border border-white/30 cursor-pointer hover:bg-white/30 transition-all"
                    >
                        <svg
                            class="w-6 h-6 text-white ml-1"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path d="M8 5v14l11-7z"></path></svg
                        >
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side Info Card -->
        <div
            class="showcase-item bg-blue-900/40 backdrop-blur-sm border border-blue-500/20 rounded-3xl p-8 flex flex-col justify-center relative overflow-hidden opacity-0 translate-y-8"
        >
            <!-- Decor -->
            <div
                class="absolute top-0 right-0 w-32 h-32 bg-blue-600/20 rounded-full blur-3xl"
            >
            </div>

            <div class="relative z-10">
                <h3 class="text-2xl font-bold mb-6 font-outfit">
                    You can't skip the screen while waiting for coffee.
                </h3>

                <ul class="space-y-4">
                    <li class="flex items-start gap-3">
                        <svg
                            class="w-6 h-6 text-blue-400 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path></svg
                        >
                        <span class="text-gray-300"
                            >Large 4K digital screens</span
                        >
                    </li>
                    <li class="flex items-start gap-3">
                        <svg
                            class="w-6 h-6 text-blue-400 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path></svg
                        >
                        <span class="text-gray-300">Powered by analytics</span>
                    </li>
                    <li class="flex items-start gap-3">
                        <svg
                            class="w-6 h-6 text-blue-400 shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path></svg
                        >
                        <span class="text-gray-300"
                            >No competing brands on the same screen</span
                        >
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    gsap.to(".showcase-item", {
        scrollTrigger: {
            trigger: ".showcase-item",
            start: "top 80%",
        },
        y: 0,
        opacity: 1,
        duration: 0.8,
        stagger: 0.2,
        ease: "power2.out",
    });
</script>
